<h1 class="text-center">Cocktails</h1>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo.path, quality: "auto:eco", height: 175, crop: :fill unless cocktail.photo.nil? %>');">
          <div class="card-description">
            <h2><%= cocktail.name.capitalize %></h2>
          </div>
          <div class="card-category"><%= cocktail.category %></div>
          <%= link_to '', cocktail_path(cocktail), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="paginate-center">
      <%= paginate @cocktails %>

  </div>
</div>

